<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_city"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/panel_PRG_time"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_toEndOf="@id/heart_3"
        />

    <ImageView
        android:id="@+id/heart_1"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/img_heart"
        />

    <ImageView
        android:id="@+id/heart_2"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/heart_1"
        android:layout_toEndOf="@+id/heart_1"
        android:src="@drawable/img_heart"
        />

    <ImageView
        android:id="@+id/heart_3"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/heart_2"
        android:layout_toEndOf="@+id/heart_2"
        android:src="@drawable/img_heart"
        />

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_below="@id/heart_1"
        android:layout_marginTop="10dp"
        >

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/enemy_1"
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:src="@drawable/img_mojo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/enemy_2"
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:src="@drawable/img_mojo"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/enemy_3"
                android:layout_width="match_parent"
                android:layout_height="250px"
                android:src="@drawable/img_mojo" />
        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/left_BTN"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/img_left"
        />

    <Button
        android:id="@+id/right_BTN"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/img_right"
        />

    <ImageView
        android:id="@+id/player"
        android:src="@drawable/img_buttercup"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_above="@id/right_BTN"
        android:layout_centerInParent="true"
        />


</RelativeLayout>